{
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"baseUrl": "./",
		"declaration": true,
		"emitDecoratorMetadata": true,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"forceConsistentCasingInFileNames": true,
		"incremental": true,
		"module": "commonjs",
		"noFallthroughCasesInSwitch": false,
		"noImplicitAny": false,
		"outDir": "./dist",
		"removeComments": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"strictBindCallApply": false,
		"strictNullChecks": true,
		"target": "ES2021",
		"paths": {
			"@/filters/*": ["src/filters/*"],
			"@/prisma/*": ["src/prisma/*"],
			"@/validators/*": ["src/validators/*"],
			"@/farm/*": ["src/farm/*"],
			"@/haverst/*": ["src/harvest/*"],
			"@/logging/*": ["src/logging/*"],
			"@/rural-producer/*": ["src/rural-producer/*"]
		}
	}
}
