generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model RuralProducer {
  cpfCnpj String @unique
  name    String
  Farms    Farm[]
}

model Farm {
  id                   Int            @id @default(autoincrement())
  name                 String
  city                 String
  state                String
  totalArea            Int
  arebleArea           Int
  vegetationArea       Int
  Harvests              Harvest[]
  RuralProducer        RuralProducer? @relation(fields: [ruralProducerCpfCnpj], references: [cpfCnpj])
  ruralProducerCpfCnpj String?
}

model Harvest {
  id     Int      @id @default(autoincrement())
  year   DateTime
  crop   String[]
  Farms   Farm     @relation(fields: [farmId], references: [id])
  farmId Int
}
